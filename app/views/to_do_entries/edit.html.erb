<h1>Editing To Do Entry</h1>

<%= form_with model: @to_do_entry do |form| %>
    <%= form.label "Current Title", class: "form-label" %>
    <%= form.text_field :title, class: "form-control"%>
    <%= form.label "Completion Status:",  class: "form-label"%>
    <%= form.check_box :completed%> <br>
    <%= form.submit class: "btn btn-primary"%>
<% end %>

<%= link_to 'Show', @to_do_entry %> |
<%= link_to 'Back', to_do_entries_path %>
